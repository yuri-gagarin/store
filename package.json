{
  "name": "store",
  "version": "1.0.0",
  "description": "\"a general online store\"",
  "main": "index.js",
  "author": "yuri-gagarin",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.12",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.20",
    "@types/multer": "^1.4.3",
    "@types/node": "^13.13.5",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chalk": "^4.1.0",
    "eslint": "^7.0.0",
    "eslint-plugin-import": "^2.20.2",
    "faker": "^4.1.0",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "jest": "^26.0.1",
    "mocha": "^7.2.0",
    "mongoose": "^5.9.14",
    "multer": "^1.4.2"
  },
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./app/server.ts",
    "start:watch": "env NODE_ENV=development nodemon",
    "build": "rimraf ./build && tsc",
    "lint": "eslint . --ext .ts",
    "test": "env NODE_ENV=test mocha -r ts-node/register ./app/_tests_/**/**/*.test.ts --recursive --exit",
    "seedDB": "env NODE_ENV=development node -r ts-node/register ./app/db/seeds.ts",
    "dropDB": "env NODE_ENV=development node -r ts-node/register ./app/db/dropDB.ts",
    "clearUploads": "env NODE_ENV=development node -r ts-node/register ./app/db/clearUploads.ts"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "app"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
