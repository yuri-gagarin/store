{
  "name": "store",
  "version": "1.0.0",
  "description": "\"a general online store\"",
  "main": "index.js",
  "author": "yuri-gagarin",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/mongoose": "^5.7.20",
    "@types/node": "^13.13.5",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "eslint": "^7.0.0",
    "eslint-plugin-import": "^2.20.2",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^5.9.14"
  },
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./app/server.ts",
    "start:watch": "nodemon",
    "build": "rimraf ./build && tsc",
    "lint": "eslint . --ext .ts"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "app"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
